{
  "name": "mieuxplacer-middleware",
  "version": "2.36.0-RC-1",
  "description": "Middleware for Mieuxplacer.com services",
  "main": "index.js",
  "private": true,
  "dependencies": {
    "@adonisjs/ace": "^5.1.0",
    "@adonisjs/bodyparser": "^2.3.0",
    "@adonisjs/cors": "^1.0.7",
    "@adonisjs/drive": "^1.0.4",
    "@adonisjs/fold": "^4.1.0",
    "@adonisjs/framework": "^5.0.13",
    "@adonisjs/generic-exceptions": "^3.0.1",
    "@adonisjs/ignitor": "^2.0.8",
    "@adonisjs/redis": "^2.1.0",
    "@adonisjs/session": "^1.1.0",
    "@robinfinance/js-api": "^3.6.13",
    "@sentry/node": "^6.12.0",
    "@sentry/tracing": "^6.12.0",
    "@slack/web-api": "^6.4.0",
    "adonisjs-sse": "^0.1.2",
    "date-fns": "^2.23.0",
    "http-proxy": "^1.18.1",
    "node-fetch": "^2.6.7",
    "on-finished": "^2.3.0",
    "prismic-javascript": "^2.7.1",
    "proxy-agent": "^5.0.0",
    "redis-lru": "^0.6.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@adonisjs/vow": "^1.0.17",
    "@commitlint/config-conventional": "^13.1.0",
    "@sentry/cli": "^1.68.0",
    "@types/chai": "^4.2.21",
    "@types/fetch-mock": "^7.3.5",
    "@types/http-proxy": "^1.17.7",
    "@types/node": "^16.7.13",
    "@types/node-fetch": "^2.5.12",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "commitlint": "^13.1.0",
    "concurrently": "^6.2.1",
    "cpx": "^1.5.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fetch-mock": "^9.11.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "sync-glob": "^1.4.0",
    "tsc-watch": "^4.5.0",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "start": "nodemon ./dist/server.js",
    "watch": "yarn clean && concurrently npm:watch:*",
    "watch:app": "tsc-watch",
    "watch:env": "sync-glob --delete false --watch '.env' dist",
    "watch:env-testing": "sync-glob --delete false --watch '.env.testing' dist",
    "watch:package": "sync-glob --delete false --watch 'package.json' dist",
    "watch:resource": "sync-glob --delete false --watch 'src/resources/**/*' dist/resources",
    "build": "yarn clean && tsc && yarn copy:files",
    "copy:files": "cpx '.env' dist && cpx '.env.testing' dist && cpx 'package.json' dist && cpx 'src/resources/**/*'  dist/resources",
    "clean": "rimraf dist/",
    "test": "ln -fs ../node_modules dist/node_modules && cp ace dist/ace && node dist/ace test",
    "debug": "yarn clean && yarn copy:files && tsc-watch --onSuccess 'node --inspect ./dist/server.js'",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts' && prettier --check 'src/**/*.ts'",
    "prepare": "husky install"
  },
  "autoload": {
    "App": "./app"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint",
      "prettier --write"
    ]
  }
}
