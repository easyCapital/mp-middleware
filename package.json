{
  "name": "mieuxplacer-middleware",
  "version": "0.0.1",
  "description": "Middleware for Mieuxplacer.com services",
  "main": "index.js",
  "private": true,
  "dependencies": {
    "@adonisjs/ace": "^5.0.8",
    "@adonisjs/cors": "^1.0.7",
    "@adonisjs/fold": "^4.0.9",
    "@adonisjs/framework": "^5.0.9",
    "@adonisjs/ignitor": "^2.0.8",
    "mieuxplacer-js-api": "git+ssh://git@github.com/robinfinance/mieuxplacer-js-api.git#1.1.2",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@types/node": "^12.7.3",
    "@types/node-fetch": "^2.5.0",
    "commitlint": "^8.1.0",
    "cpx": "^1.5.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "tsc-watch": "^2.4.0",
    "tslint": "^5.19.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2"
  },
  "scripts": {
    "start": "cpx '.env package.json' dist && tsc-watch --onSuccess 'node ./dist/server.js'",
    "build": "tsc && cpx '.env' dist && cpx 'package.json' dist",
    "clean": "rimraf dist/"
  },
  "autoload": {
    "App": "./app"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "tslint",
      "prettier --write",
      "git add"
    ]
  }
}
